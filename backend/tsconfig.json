{
    "compilerOptions": {
        "lib": [ "es5", "es6", "es7",
                 "es2015", "es2016",
                 "es2017", "es2018",
                 "esnext" ],
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "rootDir": "src",
        "baseUrl": "src",
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declarationMap": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/globals.d.ts",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}